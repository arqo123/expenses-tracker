# Server
PORT=3000
NODE_ENV=development

# Language (pl, en, de) - controls all UI strings and AI prompts
LANGUAGE=pl

# Database
DATABASE_URL=postgres://your_user:your_password@localhost:5433/expense_tracker
# Or separate values:
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5433
# POSTGRES_DATABASE=expense_tracker
# POSTGRES_USER=your_user
# POSTGRES_PASSWORD=your_secure_password

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_TOKEN_DEV=your_dev_bot_token_here
# Comma-separated Telegram chat IDs allowed to use the bot
ALLOWED_CHAT_IDS=123456789,987654321

# AI APIs
OPENROUTER_API_KEY=your_openrouter_key_here
GROQ_API_KEY=your_groq_key_here

# AI Models (optional, defaults shown)
# AI_PRIMARY_MODEL=mistralai/mistral-small-3.2-24b-instruct
# AI_FALLBACK_MODEL=google/gemini-2.0-flash-001
# AI_VISION_MODEL=google/gemini-2.0-flash-001

# Security (optional but recommended for production)
# Comma-separated API keys for REST API authentication
API_KEYS=
# Comma-separated usernames allowed to access data
ALLOWED_USERS=User1,User2
# Comma-separated origins allowed for CORS (empty = dev mode allows localhost only)
CORS_ORIGINS=https://your-frontend.com
# Telegram webhook secret (set via setWebhook secret_token parameter)
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Feature Flags (true/false, all default to true except debug)
# FEATURE_SHOPPING_LIST=true
# FEATURE_VOICE_MESSAGES=true
# FEATURE_RECEIPT_MATCHING=true
# FEATURE_NLP_QUERY=true
# FEATURE_DEBUG_ENDPOINTS=false
# FEATURE_PRODUCT_LEARNING=true
